include includes/header.pug
.container
  form(method="post", enctype="multipart/form-data", action="/submit", class="form-horizontal")
    .form-group
      .col-sm-4
        label 活动名称
        input.form-control(type="text" value="" name="activityName" placeholder="请输入活动名称")
      .col-sm-4
        label 页面标题
        input.form-control(type="text" value="" name="pageTitle" placeholder="请输入标题")
      .col-sm-4(data-type="backgroundImage")
        label 背景图片
        input.form-control(type="file" name="inputFile")


    .form-group
      h3 产品区域1
      .col-sm-4
        label 产品名称
        input.form-control(type="text" name="productName" placeholder="请输入产品名称")
      .col-sm-4
        label 产品价格
        input.form-control(type="text" name="productPrice" placeholder="请输入产品价格")
      .col-sm-4(data-type="productImage")
        label 产品图片
        input.form-control(type="file" name="inputFile")

    .form-group
      h3 产品区域2
      .col-sm-4
        label 产品名称
        input.form-control(type="text" name="productName" placeholder="请输入产品名称")
      .col-sm-4
        label 产品价格
        input.form-control(type="text" name="productPrice" placeholder="请输入产品价格")
      .col-sm-4(data-type="productImage")
        label 产品图片
        input.form-control(type="file" name="inputFile")

    .form-group
      label 选择模板
      select(name="modelType", class="form-control")
        option(value="model1" selected="selected") 模板一
        option(value="model2") 模板二
        option(value="model3") 模板三


    .form-group
      button(type="submit", class="btn btn-default") 预览并提交
      button(type="reset", class="btn btn-default") 重置
