include ../includes/header.pug
.container
  form.form-horizontal(role="form" action="/users/login" method="post")
    .form-group
      label.col-sm-2.control-label(for="userName") 用户名
      .input-group.col-sm-10
        input#userName.form-control(type="text" name="name")
    .form-group
      label.col-sm-2.control-label(for="password") 密码
      .input-group.col-sm-10
        input#password.form-control(type="password" name="password")
    .form-group
      .col-sm-offset-2.col-sm-10
        button(type="submit" class="btn btn-default") 登录
        button(type="reset" class="btn btn-default") 重置
