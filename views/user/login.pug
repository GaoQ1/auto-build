include ../includes/header.pug
.container
  form(action="/users/login" method="post" role="form" class="form-horizontal")
    .form-group
      label(for="username" class="col-sm-2 control-label") 用户名
      div(class="input-group col-sm-10")
        .input-group-addon span(class="glyphicon glyphicon-user")
        input(type="text" class="form-control" id="username" name="username" placeholder="用户名")
    .form-group
      label(for="password" class="col-sm-2 control-label") 密码
      div(class"input-group col-sm-10")
        .input-group-addon" span(class="glyphicon glyphicon-lock")
        input(type="password" class="form-control" id="password" name="password" placeholder="密码")
    .form-group
      div(class="col-sm-offset-2 col-sm-10")
        button(type="submit" class="btn btn-default") 提交
        button(type="reset" class="btn btn-default") 重置
